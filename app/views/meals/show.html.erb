<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <h1>This is where the photo will be</h1>
      <h2>And here we'll put info about the user</h2>
    </div>
    <div class="col-xs-12 col-sm-6">
      <div class="row">
        <div class="col-xs-7">
          <div class="meal-info">
            <div class="meal-info">
              <h2><%= @meal.name %> ($<%= @meal.price %>)</h2>
              <p>Category: <%= @meal.category %></p>
              <p>Get it at <%= @meal.address %></p>
            </div>
          </div>
        </div>
        <div class="col-xs-5 btn-order">
          <button class="btn btn-success btn-lg">Order now!</button>
        </div>
      </div>
      <div class="meal-description text-justify">
        <h3>Description</h3>
        <!-- <p><%= @meal.description %></p> -->
        <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Doloribus neque dolorem blanditiis culpa ullam quis, autem tenetur dicta quam amet quae hic et error minima possimus voluptates quia suscipit animi?</p>
      </div>
    </div>
  </div>

  <div class="row up-division">
    <div class="col-xs-12 col-sm-6">
      <h4 class="text-center">Reviews</h4>
      <% @meal.reviews.each do |review| %>
        <div class="review-card">
          <p><%= review.comment %></p>
          <p>
            <%review.rating.times { %><i class='fa fa-star'></i> <% } %>
            <%(5 - review.rating).times { %><i class='fa fa-star-o'></i> <% } %>
          </p>
        </div>
      <% end %>
    </div>
    <div class="col-xs-12 col-sm-4 col-sm-offset-1">
      <h4 class="text-center">Add a review</h4>

      <% if @review.errors.any? %>
        <ul>
          <% @review.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= simple_form_for([@meal, @review]) do |f| %>
        <%= f.input :comment %>
        <%= f.input :rating, collection: 0..5 %>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
