<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <div class="meal-name">
        <h1><%= @meal.name %></h1>
      </div>
      <div class="meal-price"></div>
        <h3><%= @meal.price %></h3>
      </div>

      <div class="meal-address"></div>
        <p><%= @meal.address %></p>
      </div>

      <div class="meal-category"></div>
        <p><%= @meal.category %></p>
      </div>

      <div class="meal-description"></div>
        <p><%= @meal.description %></p>
      </div>


      <ul class="list-unstyled">
        <% @meal.reviews.each do |dose| %>
          <li><%= review.comment %></li>
          <li><%= review.rating %></li>
        <% end %>
      </ul>

      <h2 class="text-center">Add a review</h2>

      <% if @review.errors.any? %>
        <ul>
          <% @review.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= simple_form_for([@meal, @review]) do |f| %>
        <%= f.input :comment %>
        <%= f.input :rating, collection: 0..5 %>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>

      <%= link_to 'Back', meals_path %>
    </div>
  </div>
</div>
