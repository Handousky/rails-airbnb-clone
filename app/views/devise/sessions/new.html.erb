<h2 class="text-center">Log in</h2>

<div class="row">
  <div class="col-xs-12 col-sm-4 col-sm-offset-4">
    <div class="facebook-btn text-center">
      <%= link_to omniauth_authorize_path(:user, :facebook), class: 'btn btn-fb' do%>
        <i class="fa fa-facebook"> Sign in with facebook</i>
      <% end %>
    </div>
    <br>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: 'btn btn-primary' %>
        <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
          or <%= link_to "Sign up", new_registration_path(resource_name) %><br />
        <% end -%>
      </div>
    <% end %>
    <br>
    <%= render "devise/shared/links" %>
  </div>
</div>
